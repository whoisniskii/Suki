{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "./build",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "*.ts", "src/Locales/**/*.json"]
}